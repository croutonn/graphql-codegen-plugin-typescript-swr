{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "rootDir": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "lib": ["es2017"],
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "dev-test/**/*.ts",
    "dev-test/**/*.tsx"
  ],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
